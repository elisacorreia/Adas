#include <bits/stdc++.h>
using namespace std;

int main (){
    int n;
    cin >> n; 

    vector<char> colors;
    for (int i = 0; i < n; i++) {
        char c;
        cin >> c;
        colors.push_back(c);
    }
    int c = 0;
    for (int j = 0; j < n; j++) {
        if (colors[j] != colors[j + 1]) {
            c++; }
    } 
    cout << c << endl;
    
    
    return 0;
}
